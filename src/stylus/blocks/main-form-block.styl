.main-form-block
  max-width: 50%;
  background-color rgba(0, 0, 0, 0.52)
  color #fff
  font-family: "PT Sans", sans-serif;
  display block
  outline 3px solid #fff
  outline-offset -15px
  width 100%
  margin 30px auto 0 auto
  min-height 350px
  @media screen and (min-height: 550px) and (max-height: 780px)
    min-height 280px
    margin  15px auto 0 auto
  @media (max-width: 414px)
    width 100%
    min-height auto
    min-width 300px

  &__inner
    text-align center


  &__block-inner
    max-width 100%
  @media (max-width: 1050px)
    padding: 50px 0 0 0;

  @media (max-width: 414px)
    padding: 30px 0 0 0;

  &__title
    font-weight 300
    font-size 28px
    color #fff
    text-align center
    max-width 420px
    display inline-block
    margin 30px auto 0 auto
    text-shadow 2px 4px 3px rgba(0,0,0,0.64)
    @media (max-width: 414px)
      font-size 20px
      margin 0
    @media screen and (min-height: 550px) and (max-height: 780px)
      max-width 100%
      font-size 26px

  &__desc
    font-size 20px
    margin-bottom 10px

  &__phone, &__mail
    color #fff
    text-decoration none
    font-weight bold


