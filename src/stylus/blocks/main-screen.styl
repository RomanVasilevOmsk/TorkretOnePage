.main-screen
  width 100%
  background-size cover
  min-height 100vh
  position relative
  overflow hidden
  @media (max-width: 550px)
    background url(../images/mobile-bg.jpg) no-repeat fixed
    background-size: cover
    background-position: 50% 100%

  &__inner
    top 170px
    position absolute
    width 100%
    @media screen and (min-height: 550px) and (max-height: 780px)
      top 130px
    @media  (max-height: 768px) and (max-width : 1024px)
      top 110px

  &__wrapper
    background-color: rgba(0, 0, 0, 0.46);
    padding 35px 0
    width 90%
    max-width 1200px
    text-shadow 2px 4px 3px rgba(0, 0, 0, 0.64)
    margin 0 auto
    @media screen and (min-height: 550px) and (max-height: 780px)
      padding 15px 0
    @media (max-width: 414px)
      width 100%
      margin 0 0 10px 0
      padding 10px

  &__title
    font-family 'Roboto', sans-serif
    text-align center
    color #fff
    font-size 36px
    font-weight 400
    letter-spacing -0.01em
    line-height 1.2em
    margin: 0 auto;
    @media  (max-height: 768px) and (max-width : 1024px)
      font-size 28px
    @media screen and (min-height: 550px) and (max-height: 780px)
      font-size 26px
    @media (max-width: 414px)
      font-size 18px
      max-width 250px


@media (max-width: 550px){
  #trailer{
    display: none;
  }
}